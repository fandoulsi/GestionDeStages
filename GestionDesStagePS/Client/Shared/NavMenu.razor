            </Authorized>
        </AuthorizeView>
        <AuthorizeView Policy="@GestionDesStagePS.Shared.Policies.Policies.EstEtudiant">
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="etudiantedit">
