        </AuthorizeView>
        <AuthorizeView Policy="@GestionDesStagePS.Shared.Policies.Policies.EstCoordonnateur">
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="coordonnateuredit">
